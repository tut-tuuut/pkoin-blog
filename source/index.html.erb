---
pageable: true
per_page: 5
---
<% page_articles.each_with_index do |article, i| %>
  <article class="summary">
    <h1><%= link_to article.title, article %></h1>
    <div class="meta"><%= article.date.strftime('%d/%m/%Y') %></div>
    <div><%= article.summary %> <%= link_to "Lire la suiteâ€¦", article, class: "more" %></div>
    <footer>
      <div class="tags">
        <% tags = [] %>
        <% article.tags.each do |tag| %>
          <% tags << link_to(tag, tag_path(tag)) %>
        <% end %>
        <strong>Tags :</strong> <%= tags.join ", " %>
      </div>
    </footer>
  </article>
<% end %>

<% if paginate && num_pages > 1 %>
  <div class="pages">
  <% if prev_page %>
    <%= link_to '<i class="fa fa-hand-o-left"></i>', prev_page %>
  <% end %>
  Page <%= page_number %> sur <%= num_pages %>
  <% if next_page %>
    <%= link_to '<i class="fa fa-hand-o-right"></i>', next_page %>
  <% end %>
  </div>
<% end %>
